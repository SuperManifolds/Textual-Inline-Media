{
    "env": {
        "browser": true,
        "node": true,
        "jquery": true,
        "es6": true,
        "mocha": true
    },
    "globals": {
      "Textual": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": { "modules": true },
    "rules": {
        "indent": [
            2,
            2,
            {"SwitchCase": 1}
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "quotes": [
            2,
            "single",
            "avoid-escape"
        ],
        "semi": [
            2,
            "always"
        ],
        "strict": [
            2,
            "global"
        ],
        "curly": [
            2
        ],
        "no-cond-assign": [
            2,
            "always"
        ],
        "no-dupe-keys": [
            2
        ],
        "no-duplicate-case": [
            2
        ],
        "no-sparse-arrays": [
            2
        ],
        "no-obj-calls": [
            2
        ],
        "no-unexpected-multiline": [
            2
        ],
        "valid-typeof": [
            2
        ],
        "no-irregular-whitespace": [
            2
        ],
        "vars-on-top": [
            2
        ],
        "space-before-function-paren": [
            2
        ],
        "space-before-blocks": [
            2
        ],
        "space-in-parens": [
            2,
            "never"
        ],
        "space-infix-ops": [
            2
        ],
        "spaced-comment": [
            2,
            "always"
        ]
    }
}
